<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSideofThings.ACvotepage">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FF3700B3"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/logo_1">
        </ImageView>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:foregroundGravity=""
        android:paddingStart="90dp"
        android:text="Audit Committee"
        android:textColor="#1A2163"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/textview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/textView"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="You can now cast your votes ! \n Voters can select the name and review the candidates campaign"
        android:textAlignment="center"
        android:textColor="#1A2163">

    </TextView>

    <ImageButton
        android:id="@+id/actobod"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/textview2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/backone">
    </ImageButton>

    <ImageButton
        android:id="@+id/actoec"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/textview2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/nextone">
    </ImageButton>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ACRV"
        android:layout_width="match_parent"
        android:layout_below="@id/textview2"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="100dp"/>
    <View
        android:id="@+id/darken_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone" />

</RelativeLayout>