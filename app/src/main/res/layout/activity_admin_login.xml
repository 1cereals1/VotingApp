<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminLogin">

    <com.scwang.wave.MultiWaveHeader
        android:layout_width="735dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="-388dp"
        android:layout_marginBottom="251dp"
        android:rotation="90"
        app:mwhCloseColor="@color/blue_dark"
        app:mwhStartColor="@color/blue_500"
        app:mwhWaves="MultiWave"></com.scwang.wave.MultiWaveHeader>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />

    <ImageView
        android:id="@+id/logoo"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logologo"/>



    <EditText
        android:id="@+id/adminID"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_below="@id/logoo"
        android:hint="ID Number"/>

    <EditText
        android:id="@+id/adminPass"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_below="@id/adminID"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Button"
        android:background="@drawable/buttongradient"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/adminLogin"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/adminLogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Sign in"
        android:background="@drawable/buttongradient"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/adminPass"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/button"
        android:text="Sign In as User"
        android:textAlignment="center"
        android:paddingTop="25dp"
        android:textColor="@color/blue_200"
        android:textSize="15sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

</RelativeLayout>