<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".UserSideofThings.UserHome">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FF3700B3"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/logo_1">
        </ImageView>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/info_Welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:text="Hello"
        android:textColor="#1A2163"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/info_Welcome2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_below="@id/info_Welcome"
        android:text="Welcome VOTE Online Voting App"
        android:textColor="#1A2163"
        android:textSize="18sp"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_below="@id/info_Welcome2"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/info_text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="60dp"
            android:layout_below="@id/info_Welcome2"
            android:text="Election"
            android:textColor="#1A2163"
            android:textSize="35sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/info_text9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="120dp"
            android:layout_below="@id/info_text6"
            android:text="Board of Directors"
            android:textColor="#242F9B"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/info_text23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="140dp"
            android:layout_below="@id/info_text6"
            android:text="Audit Committee"
            android:textColor="#242F9B"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/info_text24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="160dp"
            android:layout_below="@id/info_text6"
            android:text="Election Committee"
            android:textColor="#242F9B"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/DisableButton2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="240dp"
            android:background="@drawable/buttongradient"
            android:text="Vote now"
            android:layout_gravity="center_horizontal" />


        <ImageView

            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_below="@id/info_Welcome2"
            android:layout_gravity="end"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/votepic1"/>

    </androidx.cardview.widget.CardView>

    <GridLayout
        android:layout_below="@id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="1">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view"
        android:layout_gravity="fill"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_rowWeight="1"
        android:background="#FFE0B5"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/info_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:text="See Results"
            android:textAlignment="center"
            android:textColor="#1A2163"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/info_Welcome2"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/img1">
        </ImageView>


        <Button
            android:id="@+id/Results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="170dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/buttongradient"
            android:backgroundTint="#FFAA3F"
            android:text="Go to Results"
            app:cardCornerRadius="50dp" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view"
        android:layout_gravity="fill"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FFE0B5"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/info_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="140dp"
            android:text="Apply for Candidacy"
            android:textColor="#1A2163"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/DisableButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="170dp"

            android:background="@drawable/buttongradient"
            android:text="Apply"
            app:cardCornerRadius="50dp" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/info_Welcome2"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/candidacyapply"/>

    </androidx.cardview.widget.CardView>

    </GridLayout>


</RelativeLayout>