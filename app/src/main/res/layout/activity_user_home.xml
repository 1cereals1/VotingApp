<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".UserSideofThings.UserHome">


    <TextView
        android:id="@+id/info_Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="350dp"
        android:layout_marginTop="100dp"
        android:text="Hello"
        android:textColor="#1A2163"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/info_Welcome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_below="@id/info_Welcome"
        android:text="Welcome VOTE Online Voting App"
        android:textColor="#1A2163"
        android:textSize="18sp"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="393dp"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_below="@id/info_Welcome2"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/info_text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="60dp"
            android:layout_below="@id/info_Welcome2"
            android:text="Election"
            android:textColor="#1A2163"
            android:textSize="35sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/info_text9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="120dp"
            android:layout_below="@id/info_text6"
            android:text="Board of Directors"
            android:textColor="#242F9B"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/info_text23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="140dp"
            android:layout_below="@id/info_text6"
            android:text="Audit Committee"
            android:textColor="#242F9B"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/info_text24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="160dp"
            android:layout_below="@id/info_text6"
            android:text="Election Committee"
            android:textColor="#242F9B"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/vote_now"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="240dp"
            android:layout_below="@id/info_Welcome2"
            android:background="@drawable/buttongradient"
            android:text="Vote now"
            app:cardCornerRadius="100dp" />


        <ImageView

            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_below="@id/info_Welcome2"
            android:layout_marginStart="190dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/votepic1"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="190dp"
        android:layout_height="230dp"
        android:layout_below="@id/card_view"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="#FFE0B5"
        app:cardCornerRadius="20dp">


        <TextView
            android:id="@+id/info_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="140dp"
            android:text="See Results"
            android:textColor="#1A2163"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@id/info_Welcome2"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/img1"/>


        <Button
            android:id="@+id/button_vote"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/buttongradient"
            android:backgroundTint="#FFAA3F"
            android:text="Go to Results"
            app:cardCornerRadius="50dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="190dp"
        android:layout_height="230dp"
        android:layout_below="@id/card_view"
        android:layout_gravity="center"
        android:layout_marginStart="210dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/info_text3"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="140dp"
            android:text="Apply for Candidacy"
            android:textColor="#1A2163"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_Candidacyapply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_BOD"
            android:layout_marginStart="40dp"
            android:layout_marginTop="120dp"
            android:text="Apply for Candidacy"
            android:textColor="#1A2163"
            android:textSize="11sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/DisableButton"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/buttongradient"
            android:text="Apply"
            app:cardCornerRadius="50dp" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@id/info_Welcome2"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/candidacyapply"/>

    </androidx.cardview.widget.CardView>


</RelativeLayout>