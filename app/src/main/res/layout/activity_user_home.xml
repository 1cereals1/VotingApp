<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D6"
    tools:context=".UserSideofThings.UserHome">

    <TextView
        android:id="@+id/TextView"
        android:layout_width="263dp"
        android:layout_height="38dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.306"/>




    <TextView
        android:id="@+id/info_Welcome"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="70dp"
        android:text="Welcome VOTE Online Voting App"
        android:textColor="#242F9A"
        android:textSize="18sp"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="393dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="116dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/samplechart"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_below="@id/card_view"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:background="#FFE0B5"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/info_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:text="Elections"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_BOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="65dp"
            android:text="Board of Directors"
            android:textColor="#3F51B5"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_AC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_BOD"
            android:layout_marginStart="63dp"
            android:layout_marginTop="85dp"
            android:text="Audit Committee"
            android:textColor="#3F51B5"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_EC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="105dp"
            android:text="Election Committee"
            android:textColor="#3F51B5"
            android:textSize="11sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/button_vote"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/buttongradient"
            android:text="Vote"
            app:cardCornerRadius="50dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="143dp"
            android:layout_marginStart="230dp"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/votepic1" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_below="@id/card_view2"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/info_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:text="Application"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_Candidacyapply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_BOD"
            android:layout_marginStart="63dp"
            android:layout_marginTop="95dp"
            android:text="Apply for Candidacy"
            android:textColor="#3F51B5"
            android:textSize="11sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/DisableButton"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/buttongradient"
            android:text="Apply"
            app:cardCornerRadius="50dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="140dp"
            android:layout_height="143dp"
            android:layout_marginStart="230dp"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/candidacyapply" />

    </androidx.cardview.widget.CardView>



</RelativeLayout>