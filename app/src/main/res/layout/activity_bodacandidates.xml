<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminSideofThings.BODAcandidates">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/purple_200">
    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:layout_width="258dp"
        android:layout_height="135dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-74dp"
        android:layout_marginTop="-22dp"
        android:src="@drawable/logo_1">

    </ImageView>

    <TextView
        android:id="@+id/BODtext"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Board of Directors \n Cadidates"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#1A2163"
        android:textAlignment="center">

    </TextView>

    <TextView
        android:id="@+id/Direction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BODtext"
        android:layout_marginTop="10dp"
        android:text="You can now Delete or Edit a chosen Candidate "
        android:textSize="18sp"
        android:textColor="#1A2163"
        android:textAlignment="center">

    </TextView>

    <ImageButton
        android:id="@+id/Homee"
        android:layout_below="@id/Direction"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/homebutton"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp">

    </ImageButton>


    <ImageButton
        android:id="@+id/bodtoacc"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/Direction"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/fowardfoward">

    </ImageButton>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/BODARV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Homee"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="#DBDFFD"
        android:layout_marginTop="20dp">

    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:id="@+id/darken_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone" />

</RelativeLayout>