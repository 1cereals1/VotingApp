<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activitymain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:paddingTop="10dp"
            android:text="@string/email_address"
            android:textColor="@color/black"
            android:textSize="20sp"></TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/TIL1"
            app:hintTextColor="@color/black"
            android:hint="ENTER EMAIL ADDRESS:"
            android:textColorHint="@color/black"
            app:helperTextEnabled="true"
            app:helperText="e.g juan delacruz@gmail.com \n Required* "
            app:endIconMode="clear_text"
            app:helperTextTextColor="@color/black"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopStart="15dp"

            app:counterTextColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Xemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_thin"
                android:inputType="textEmailAddress"
                android:textColor="#1A2163">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="FULL NAME"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/TIL2"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            android:hint="ENTER FULL NAME:"
            app:helperTextEnabled="true"
            app:helperText="e.g DELA CRUZ, JUAN MANUEL A. \n Required* "
            app:endIconMode="clear_text"
            app:helperTextTextColor="@color/black"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopStart="15dp"

            app:counterTextColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Xname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textColor="#1A2163">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADDRESS"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:paddingTop="10dp"
            >
        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/TIL3"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            android:hint="ENTER ADDRESS:"
            app:helperTextEnabled="true"
            app:helperText="e.g 110 LOWER MAGSAYSAY AVE., HAPPY HOMES LODGE, HAPPY HOMES-OLD LUCBAN, BAGUIO CITY \n Required* "
            app:endIconMode="clear_text"
            app:helperTextTextColor="@color/black"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:counterTextColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Xaddress"
                android:fontFamily="@font/poppins"
                android:textColor="#1A2163"
                >

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="MEMBERSHIP NO."
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/TIL4"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            android:hint="ENTER MEMBERSHIP NO:"
            app:helperTextEnabled="true"
            app:helperText="Required* "
            app:helperTextTextColor="@color/black"
            app:counterEnabled="true"
            app:counterMaxLength="7"
            app:endIconMode="clear_text"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopStart="15dp"



            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Xmembership"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="7"
                android:textColor="#1A2163"
                android:inputType="number">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="AGE"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/TIL5"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            android:hint="ENTER AGE:"
            app:helperTextEnabled="true"
            app:helperText="Required* "
            app:helperTextTextColor="@color/black"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopStart="15dp"

            app:counterTextColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Xage"
                android:textColor="#1A2163"
                android:maxLength="2"
                android:inputType="number"
                >

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="DATE OF BIRTH"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/TIL6"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            android:hint="ENTER DATE:"
            app:helperTextEnabled="true"
            app:helperText="mm/dd/yyyy \n Required* "
            app:helperTextTextColor="@color/black"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopStart="15dp"

            app:counterTextColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Xbirth"
                android:textColor="#1A2163"
                android:inputType="date"
                android:maxLength="10"
                >

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="GENDER"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/Xgender"
            >

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/Xmale"
                android:text="MALE"
                android:textColor="@color/black"
                >
            </RadioButton>

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/Xfemale"
                android:text="FEMALE"
                android:textColor="@color/black">
            </RadioButton>

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="ELECTIVE POSITION"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/Xcivilstatus">

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/Xsingle"
                android:text="SINGLE"
                android:textColor="@color/black">
            </RadioButton>

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/Xmarried"
                android:text="MARRIED"
                android:textColor="@color/black">
            </RadioButton>

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/Xdivorced"
                android:text="DIVORCED"
                android:textColor="@color/black">
            </RadioButton>

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/Xwidowed"
                android:text="WIDOWED"
                android:textColor="@color/black">
            </RadioButton>

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/Xothers"
                android:text="OTHERS"
                android:textColor="@color/black">

            </RadioButton>


        </RadioGroup>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="CIVIL STATUS"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/Xelectiveposition">

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/Xdirector"
                android:text="DIRECTOR"
                android:textColor="@color/black">
            </RadioButton>

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/Xaudit"
                android:text="AUDIT COMITTEE"
                android:textColor="@color/black">
            </RadioButton>

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/Xelection"
                android:text="ELECTION COMITTEE"
                android:textColor="@color/black">
            </RadioButton>




        </RadioGroup>









        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="100dp"
            android:text="WHAT ARE YOUR PLANS/VISIOM FOR OCCC IN THE 1-2 YEARS"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold">


        </TextView>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/TIL7"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
            android:hint="YOUR ANSWER:"
            app:helperTextEnabled="true"
            app:helperText="Required* "
            app:helperTextTextColor="@color/black"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopStart="15dp"


            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Xvision"
                android:textColor="#1A2163"

                >

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="">

        </TextView>






        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SUBMIT FORM"
            android:id="@+id/Xbutton">

        </Button>





























    </LinearLayout>


</ScrollView>